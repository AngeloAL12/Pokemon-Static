---
import { callSafely } from 'astro:actions';
import { ClientRouter } from 'astro:transitions';
import { siteInfo } from '../consts/site-info';
import NavBar from '@components/shared/NavBar.astro';

interface Props {
  title?: string;
  image?: string;
  description?: string;
}

const { title = siteInfo.title, description = siteInfo.description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <meta name="description" content={description} />
    <meta name="author" content={'Angelo Alvarado'} />

    <!-- OG Metatags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <title>{title}</title>

    <ClientRouter />
  </head>
  <body class="minh flex min-h-screen flex-col bg-slate-800 text-slate-100">
    <NavBar />
    <main class="mx-auto mt-10 w-full max-w-4xl flex-grow px-4">
      <slot />
    </main>
  </body>
</html>
